@model Coletor.Models.Collector
@{
    ViewData["Title"] = "Detalhes";
}
<section>
    <h2>@ViewData["Title"]</h2>

    <hr />

    <a asp-action="Index">Voltar para lista</a>


    <dl class="row">
        <div class="col-6">
            <dt>@Html.DisplayNameFor(model => model.Id)</dt>
            <dd>@Html.DisplayFor(model => model.Id)</dd>

            <dt>@Html.DisplayNameFor(model => model.Date)</dt>
            <dd>@Html.DisplayFor(model => model.Date)</dd>
            
            <dt>@Html.DisplayNameFor(model => model.NumDocFound)</dt>
            <dd>@Html.DisplayFor(model => model.NumDocFound)</dd>

            <dt>@Html.DisplayNameFor(model => model.InternFileName)</dt>
            <dd>@Html.DisplayFor(model => model.InternFileName)</dd>
        </div>
        <div class="col-6">
            <dt>@Html.DisplayNameFor(model => model.InternFilePath)</dt>
            <dd>@Html.DisplayFor(model => model.InternFilePath)</dd>

            <dt>@Html.DisplayNameFor(model => model.InputPath)</dt>
            <dd>@Html.DisplayFor(model => model.InputPath)</dd>

            <dt>@Html.DisplayNameFor(model => model.OutputPath)</dt>
            <dd>@Html.DisplayFor(model => model.OutputPath)</dd>

        </div>
    </dl>
    @if(Model.InternFileName != null)
    {
      <p>Download do arquivo xlsx de input desta busca:</p>
      <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-secondary">Download</a>
    }

    <h2 class="mt-3">Documentos</h2>
    <hr />
    @foreach (Document doc in Model.Documents)
    {
        <div>
            <dl>
                <dt>@Html.DisplayNameFor(model => doc.Name)</dt>
                <dd>@Html.DisplayFor(model => doc.Name)</dd>

                <dt>@Html.DisplayNameFor(model => doc.Size)</dt>
                <dd>@Html.DisplayFor(model => doc.Size)</dd>

                <dt>@Html.DisplayNameFor(model => doc.Path)</dt>
                <dd>@Html.DisplayFor(model => doc.Path)</dd>

                <dt>@Html.DisplayNameFor(model => doc.IsHere)</dt>
                <dd>@Html.DisplayFor(model => doc.IsHere)</dd>
            </dl>
            <hr />
        </div>
    }
</section>