@model IEnumerable<Coletor.Models.Collector>
@{
    ViewData["Title"] = "Coleta de arquivos";
}
<section>
    <h2>@ViewData["Title"]</h2>
    <hr />
    <a asp-action="SearchFiles" class="btn btn-primary mb-2">Nova Busca</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mb-2">Voltar</a>


    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.InputPath)</th>

                <th>@Html.DisplayNameFor(model => model.NumDocFound)</th>

                <th>@Html.DisplayNameFor(model => model.Date)</th>
            
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.InputPath)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumDocFound)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</section>